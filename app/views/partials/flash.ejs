<% if(messages.error) { %>
    <div class="alert alert-danger fade in" style="background:pink; padding: 20px; ">
        <% for (var i=0; i< messages.error.length; i++) { %> 
            <p><%= messages.error[i].msg %> </p>  
        <% } %> 
    </div>
<% } %>


<% if(messages.info) { %>
    <div class="alert alert-danger fade in" style="background:grey;  padding: 20px; ">
        <button class="close" style="float:right" type="button" data-dismiss="alert" aria-label="Close">x</button>
        <% for (var i=0; i< messages.info.length; i++) { %> 
            <p><%= messages.info[i].msg %> </p>  
        <% } %> 
    </div>
<% } %>

